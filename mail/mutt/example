# typical imap account template
# accounts must be stored at ~/.mutt directory

# send mail program
set sendmail="/usr/bin/msmtp -a myimap"

# address book
set query_command = "abook --mutt-query '%s'"

# data
set imap_user   = username@server.com
set imap_pass   = 'password'
set from        = username@server.com
set folder      = imaps://username@imap.server.com/
set spoolfile   = +INBOX
set postponed   = +Drafts
set record      = +Sent
set smtp_url    = smtps://username@smtp.server.com
set hostname    = 'server.com'
account-hook $folder "set imap_user=username@server.com imap_pass='password'"
