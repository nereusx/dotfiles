#!/bin/tcsh
#
#	XFCE4 startup script if you dont use session and/or GUI settings
#

### no netwrok required

# hotkeys
sxhkd &

# xautolock & xlock
xautolock &

# network manager
#nm-applet &

# notify-osd, dunst
#dunst &

# clipboard manager
xfce4-clipman &

# bluetooth
blueman-applet &

# enable screesaver
#xfce4-screensaver &
#xscreensaver -no-splash &

### network required

# run network depended commands
pidgin &
claws-mail &
~/.bin/viber &
conky &

### applications
st &

### finish
# play welcome sound
paplay /usr/share/sounds/ubuntu/stereo/desktop-login.ogg &
