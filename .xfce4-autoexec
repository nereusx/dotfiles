#!/bin/sh
# don't ask

# local/bin
lbin=/usr/local/bin

### basic services & apps

# hotkeys
nohup sxhkd &

# xautolock & xlock
nohup xautolock &

# network manager
#nohup nm-applet &

# notify-osd, dunst
pkill notify-osd; nohup dunst &

# clipboard manager
nohup xfce4-clipman &

# bluetooth
nohup blueman-applet &

# enable screesaver
#nohup xfce4-screensaver &
#nohup xscreensaver -no-splash &

# tiling
if [ -x $lbin/zentile ]; then
	nohup $lbin/zentile &
fi

# XFCE's notepad
nohup xfce4-notes &

### Net Apps ###

# mailer
nohup claws-mail &

# messangers
nohup pidgin &
nohup ~/.bin/viber &

# conky!
nohup conky &

### finish
# play welcome sound
if [ -r ~/.sounds/login.wav ]; then
	paplay ~/.sounds/login.wav
fi

# minimize whatever...
#wmctrl -a Viber -b add,hidden
wmctrl -c Viber

# XFCE Notes (you have to rename the group)
wmctrl -c XFCENotes

# run a terminal
exec $lbin/st -e tmux
