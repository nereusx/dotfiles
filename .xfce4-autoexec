#!/bin/tcsh -f

### no netwrok required

#
dunst &
xfce4-screensaver &

### network required
# wait for connection
unset online
while ( 1 )
	ping 1.1.1.1 -c 1 -w 1 > /dev/null && set online
	if ( $?online ) then
		break
	endif
	sleep 1
end

# run network depended commands
pidgin &
claws-mail &
~/.bin/viber &
conky &

### finish
# play welcome sound
paplay /usr/share/sounds/ubuntu/stereo/desktop-login.ogg &
