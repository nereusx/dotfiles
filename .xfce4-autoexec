#!/bin/sh
# don't ask

# local/bin
lbin=/usr/local/bin

### basic services & apps

# hotkeys
nohup sxhkd &

# xautolock & xlock
nohup xautolock &

# network manager
#nohup nm-applet &

# notify-osd, dunst
pkill notify-osd; nohup dunst &

# clipboard manager
nohup xfce4-clipman &

# bluetooth
nohup blueman-applet &

# enable screesaver
#nohup xfce4-screensaver &
#nohup xscreensaver -no-splash &

# tiling
if [ -x $lbin/zentile ]; then
	nohup $lbin/zentile &
fi

# XFCE's notepad
nohup xfce4-notes &

### Net Apps ###

# mailer
nohup claws-mail &

# messangers
nohup pidgin &
nohup ~/.bin/viber &

# conky!
nohup conky &

### finish
# play welcome sound
if [ -r ~/.sounds/login.wav ]; then
	paplay ~/.sounds/login.wav
fi

# minimize whatever...
xdo close -N Viber

# XFCE Notes (you have to rename the group)
xdo close -N Xfce4-notes

# close pidgin window asking for ignore SSL
# class = Pidgin
code=36
xdo activate -N Pidgin; sleep 0.2
xdo key_press -k $code ; sleep 0.2; xdo key_release -k $code

# run a terminal
exec urxvt -sl 0 -e tmux
