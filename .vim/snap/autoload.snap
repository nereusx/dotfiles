# https://github.com/quintik/snap.vim # 

# time #
snipexpr time {
	strftime('%H:%M')
	}

# unix time #
snipexpr time {
	strftime('%s')
	}

# date (locale) #
snipexpr date {
	strftime('%c')
	}

# date (RFC822) #
snipexpr rdate {
	trim(system("date -R"))
	}

# short date - yyyy-mm-dd #
snipexpr sdate {
	strftime('%F')
	}

