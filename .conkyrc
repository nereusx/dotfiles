# Conky settings #
background yes
update_interval 1
double_buffer yes
no_buffers yes
imlib_cache_size 10

# Window specifications #
gap_x 80
gap_y 80
minimum_size 300 0
maximum_width 500
alignment top_right
own_window yes
own_window_type normal
own_window_transparent yes
own_window_argb_visual yes
own_window_argb_value 255
own_window_hints undecorated,sticky,skip_taskbar,skip_pager,below
#own_window_type normal
#own_window_transparent no
#own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
#own_window_argb_visual yes
#own_window_argb_value 0
border_inner_margin 0
border_outer_margin 0

# Graphics settings #
draw_shades no
default_shade_color AAAAAA
draw_outline no
default_outline_color AAAAAA
draw_borders no
draw_graph_borders yes
default_graph_size 26 80
show_graph_scale no
show_graph_range no

# Text settings #
use_xft yes
xftalpha 0
xftfont XSG Chicago15:size=11
text_buffer_size 256
override_utf8_locale yes

# Useful shortenings #
short_units yes
pad_percents  1
top_name_width 30

# Color scheme #
default_color FFFFFF
color0 ffffff
color1 FFFFFF
color2 ffa300
color3 FFFFFF
color4 FFFFFF
color5 DCDCDC
color6 FFFFFF
color7 FFFFFF
color8 FFFFFF

TEXT
NDC System
${time %A} ${color FFA300}${time %d} ${color EAEAEA}${time %B} ${color FFA300}${time %Y}${color}
${color 00ff00}${time %H:%M:%S}${color}

=== CPU ===
${cpugraph 26,300 FFFFFF FFFFFF -l}
Cpu:${alignr}${cpu}%

${memgraph 26,300 FFFFFF FFFFFF -l}
Mem:${alignr}$mem / $memmax - ${color FFA300}${memperc}%${color}

=== DISK ===
${diskiograph 26,300 FFFFFF FFFFFF -l}
Disk I/O:${alignr}${diskio}

Disk${goto 50}Free${goto 100}Used${goto 150}Size
/${goto 50}${color FFA300}${fs_free /}${color}${goto 100}${fs_used /}${goto 150} ${fs_size /}
${goto 50}${fs_bar 12,210 /}${alignr}${fs_used_perc /}%
/srv${goto 50}${color FFA300}${fs_free /srv}${color}${goto 100}${fs_used /srv}${goto 150}${fs_size /srv}
${goto 50}${fs_bar 12,210 /srv}${alignr}${fs_used_perc /srv}%

=== NETWORK ===
${upspeedgraph enp3s0 26,145 FFFFFF FFFFFF}${goto 155}${downspeedgraph enp3s0 26,145 FFFFFF FFFFFF}
${color5}Up: ${color2}${upspeed enp3s0}${color5}${goto 155}Down: ${color2}${downspeed enp3s0}${color}
${color5}Sent: ${color2}${totalup enp3s0}${color5}${goto 155}Received: ${color2}${totaldown enp3s0}${color}

