#!/bin/tcsh -f
#
#	Package and service manager for Void Linux
#
#	Copyright (C) 2019, Nicholas Christopoulos <nereus@freemail.gr>
#
#	This program is free software; you can redistribute it and/or modify it
#	under the terms of the GNU General Public License as published by the Free
#	Software Foundation; either version 3 of the License, or (at your option)
#	any later version.
#

###
set todo = help
if ( $#argv > 0 ) then
	set todo = $1
endif

switch ( $todo )
#
#	packages
#
case -i:
case install:
	slackpkg install $argv[2-]
	breaksw
case -r:
case remove:
	slackpkg remove $argv[2-]
	breaksw
case -u:
case upgrade:
	slackpkg update && slackpkg upgrade-all && slackpkg install-new
	breaksw
case -g:
case upgrade:
	slackpkg update gpg
	breaksw
case -v:
case info:
case view:
case show:
	slackpkg info $argv[2-]
	breaksw
case -s:
case search:
	slackpkg search "$argv[2-]"
	breaksw
case -f:
case file-search:
case search-file:
	slackpkg file-search $argv[2-]
	breaksw
	
#
#	services
#
case start:
case stop:
case restart:
case reload:
case status:
	set prg = $2
	set f = /etc/rc.d/rc.$prg
	if ( -x $f ) then
		/etc/rc.d/rc.$prg $todo
	else if ( -f $f ) then
		echo "$prg the service is disabled"
	else
		echo "$prg: no such service"
	endif
	breaksw

case -e:
case enable:
	set prg = $2
	set f = /etc/rc.d/rc.$prg
	if ( -f $f ) then
		if ( -x $f ) then
			echo "$prg service its already enabled"
		else
			chmod +x $f
			$f start
			echo "done"
		endif
	endif
	breaksw

case -d:
case disable:
	set prg = $2
	set f = /etc/rc.d/rc.$prg
	if ( -f $f ) then
		if ( -x $f ) then
			$f stop
			chmod -x $f
			echo "done"
		else
			echo "$prg service its already disabled"
		endif
	endif
	breaksw

case -D:
case -av:
case -ld:
case -lds:
case list-disabled:
	set list = ( /etc/rc.d/* )
	foreach e ( $list )
		if ( -l $e ) continue
		if ( -d $e ) continue
		if ( $e =~ "*.orig" ) continue
		if ( $e =~ "*/rc.[0123456KMS]" ) continue
		if ( ! -x $e ) then
			set disp = `echo $e:t | awk '{print substr($1,4)}'`
			echo $disp
		endif
	end
	breaksw

case -E:
case -nav:
case -le:
case -les:
case list-enabled:
	set list = ( /etc/rc.d/* )
	foreach e ( $list )
		if ( -l $e ) continue
		if ( -d $e ) continue
		if ( $e =~ "*.orig" ) continue
		if ( $e =~ "*/rc.[0123456KMS]" ) continue
		if ( -x $e ) then
			set disp = `echo $e:t | awk '{print substr($1,4)}'`
			echo $disp
		endif
	end
	breaksw

help:
default:
	cat <<EOF
Package and service manager for Slackware Linux, version 1.2

Packages:
    -i  | install ...             install package[s]
    -r  | remove ...              remove package[s]
    -u  | update ...              update package list and upgrade all installed packages
#    reinstall ...                 reinstall package[s]
    -s  | search <pattern>        search for packages by matching package-name
    -v  | show | info | view ...  display information about package[s]
    -f  | file-search ...         search file in packages

Services:
    -e[s]  | enable[-service] <service>
    -d[s]  | disable[-service] <service>
    -le[s] | -nav | list-enabled  display all actived services
    -ld[s] | -av | list-disabled  display all available (disabled) services
    start | stop | restart | status <service>

Special:
    -g                            update gpg
#    -o   | autoremove              remove obsolete packages
#    -rc  | reconfigure <package>
#    -rok | remove-old-kernels
#    --files <package>               shows the files of the package

EOF
endsw

