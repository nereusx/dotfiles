#!/bin/tcsh -f

set echo_style=both
foreach file ( .tcshrc .mkshrc .login .Xresources .nanorc\
				.jed .help .emacs .emacs.d .joerc .xres .themes .icons .fonts\
				.bc .gitconfig )
	set src = $file
	if ( ! -e $src ) set src = dotfiles/$file
	if ( ! -e $src ) set src = /root/$file
	if ( ! -e $src ) continue

	echo "$src"
	cp -r $src /root
	foreach dir ( /home/* )
		set name = $dir:t
		cp -r $src $dir
		chown -R ${name}:${name} $dir/${src:t}
		if ( $file == ".help" || $file == ".bin" ) then
			chmod -R 0700 $dir/${src:t}
		else
			chmod -R 0600 $dir/${src:t}
		endif
		chmod -R u+X $dir/${src:t}
	end
end
install -m 755 local-bin/* /usr/local/bin/
tar xvfz nano-syntax-hl.tgz -C /
echo "copy .config manually"
echo "copy .doc-templates and .wallpapers manually"
echo "edit .msmtprc .muttrc and .fetchmailrc per user"


